generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  telegramId String   @unique
  username   String
  firstName  String
  lastName   String
  hash       String
  authDate   DateTime
  photoUrl   String?
  role       Role     @default(uesr)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum Role {
  uesr
  admin
}

model transaction {
  id            String  @id @default(uuid())
  chargeId      String  @unique
  amount        Decimal
  code          String
  chargeType    String
  redirect_ssl  String
  quantity      Float
  walletAddress String
  chain         String
  status        Status  @default(waiting)
}

enum Status {
  waiting
  success
  timeout
  unknow
  cancel
}
